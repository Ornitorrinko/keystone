        **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        ***********************************************************************************************************************************************************
      // sidebar start
      aside
        #sidebar.nav-collapse
          // sidebar menu start
          ul#nav-accordion.sidebar-menu
            p.centered
              a(href='/keystone')
                img.img-circle(src='/keystone/theme-costao/assets/img/ui-sam.jpg', width='60')
            h5.centered Administrador
            li.mt
              a.active(href='/keystone')
                i.fa.fa-dashboard
                span Dashboard
            li.sub-menu
              a(href='/keystone/resorts')
                i.fa.fa-home
                span O Resort
            li.sub-menu
              a(href='/keystone/packages')
                i.fa.fa-ticket
                span Pacotes
            li
              a(href='/keystone/featured-packages')
                i.fa.fa-ticket
                span Pacotes Destaque
            li
              a(href='/keystone/events')
                i.fa.fa-calendar
                span Eventos
            li
              a(href='/keystone/facilities')
                i.fa.fa-coffee
                span Comodidades
            li
              a(href='/keystone/services')
                i.fa.fa-asterisk
                span Serviços
            li
              a(href='/keystone/accomodations')
                i.fa.fa-building-o
                span Acomodações
            li.sub-menu
              a(href='/keystone/environments')
                i.fa.fa-cubes
                span Espaços
            li.sub-menu
              a(href='/keystone/holidays')
                i.fa.fa-heart
                span Feriados
            li.sub-menu
              a(href='/keystone/posts')
                i.fa.fa-book
                span Blog
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-photo
                span Galerias
              ul.sub
                li
                  a(href='/keystone/home-galleries') Galeria Home
                li
                  a(href='/keystone/galleries') Galeria Destaques
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-bolt
                span Vagas
              ul.sub
                li
                  a(href='/keystone/jobs') Jobs
                li
                  a(href='/keystone/job-types') Categorias
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-group
                span Usuários
              ul.sub
                li
                  a(href='morris.html') Morris
                li
                  a(href='chartjs.html') Chartjs
          // sidebar menu end
      // sidebar end
