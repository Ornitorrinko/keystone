    script.
      var Keystone = {};
      Keystone.csrf = function(obj) {
        obj['#{csrf_token_key}'] = "#{csrf_token_value}";
        return obj;
      };
      Keystone.csrf.key = "#{csrf_token_key}";
      Keystone.csrf.value = "#{csrf_token_value}";
      Keystone.csrf.query = "!{csrf_query}";
